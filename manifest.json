{
    "name": "AnyMacro Mail Notifier",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["*://mail.hg.cn/*"],
            "js": [
                "app.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["notifications","tabs"],
    "action": {
        "default_icon": "icon.png"
    },
    "manifest_version": 3
}